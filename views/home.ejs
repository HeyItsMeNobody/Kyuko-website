<!Doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Homepage</title>
        <style>
            ul {
                position: -webkit-sticky;
                position: sticky;
                top: 0;
                list-style-type: none;
                margin: 0;
                padding: 0;
                overflow: hidden;
                background-color: #333;
            }
            
            li {
                float: left;
            }
            
            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }
            
            li a:hover {
                background-color: #111;
            }
            .sticky {
                position: fixed;
                bottom: 10px;
                right: 10px;
            }
            .stickyimg {
                border-radius: 50%;
            }
        </style>
    </head>
    <body>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <nav>
            <ul>
                <li><a href="/">Homepage</a></li>
                <li><a href="/commands">Commands</a></li>
                <% if (!user) {%>
                <li><a href="/auth/discord">Login with discord</a></li>
                <%} else {%>
                <li><a href="/auth/logout">Logout</a></li>
                <%}%>
            </ul>
        </nav>
        <main>
            <p>Trying out express.js and ejs</p>
        </main>
        <% if (!user) {} else {%>
        <div class="sticky">
            <img src="<%= user.avatarurl %>" class="stickyimg">
            <p><%= user.username %>#<%= user.discriminator %></p>
        </div>
        <%}%>

    </body>
</html>